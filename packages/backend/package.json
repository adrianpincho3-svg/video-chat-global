{
  "name": "@random-video-chat/backend",
  "version": "1.0.0",
  "description": "Backend server for random video chat",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "bash start.sh",
    "init:prod": "tsx src/scripts/init-production.ts",
    "migrate": "tsx src/migrations/migrate.ts",
    "verify": "tsx src/utils/verify-services.ts",
    "verify-backend": "tsx src/utils/verify-backend.ts",
    "create-admin": "tsx src/utils/create-admin.ts",
    "reset-admin": "tsx src/utils/reset-admin.ts",
    "test-auth": "tsx src/utils/test-auth.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "redis": "^4.6.13",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "geoip-lite": "^1.4.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.8",
    "@types/geoip-lite": "^1.4.4",
    "typescript": "^5.3.3",
    "tsx": "^4.7.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "fast-check": "^3.15.1"
  }
}
